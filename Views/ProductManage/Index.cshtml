@model IEnumerable<WebsiteTMDT.Data.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_AdminDashBoard.cshtml";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<!-- Main Content -->
<main class="container py-4">
    <h2 class="text-primary mb-4">Quản lý sản phẩm</h2>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Danh sách sản phẩm</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Dung lượng</th>
                        <th>Màu sắc</th>
                        <th>Ảnh</th>
                        <th>Mô tả</th>
                        <th>Ngày tạo</th>
                        <th>Danh mục</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td><span class="badge bg-success">@item.Price.ToString("C")</span></td>
                            <td><span class="badge bg-info">@item.StockQuantity</span></td>
                            <td>@item.Capacity</td>
                            <td>@item.Color</td>
                            <td>
                                <img src="@item.ImageUrl" class="img-thumbnail" width="150" height="150" />
                            </td>
                            <td>@item.Description</td>
                            <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                            <td>@item.Category.CategoryName</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
    </div>
</main>

<!-- FontAwesome for icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
