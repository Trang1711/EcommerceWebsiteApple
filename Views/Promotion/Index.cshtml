@model IEnumerable<WebsiteTMDT.Data.Promotion>

@{
    ViewData["Title"] = "Quản lý khuyến mãi";
    Layout = "~/Views/Shared/_AdminDashBoard.cshtml";
}

<main class="container mt-4">
    <h2 class="mb-4 text-center">Quản lý khuyến mãi</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm khuyến mãi
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5>Danh sách khuyến mãi</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th>Tên khuyến mãi</th>
                        <th>Giảm giá (%)</th>
                        <th>Giá trị giảm ($)</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Giá trị đơn tối thiểu ($)</th>
                        <th>Giảm giá tối đa ($)</th>
                        <th>Ngày tạo</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PromotionName</td>
                            <td>@item.DiscountPercentage%</td>
                            <td>@item.DiscountAmount?.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.MinOrderValue?.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                            <td>@item.MaxDiscount?.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                            <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.PromotionId" class="btn btn-warning btn-sm me-1" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PromotionId" class="btn btn-info btn-sm me-1" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PromotionId" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');" title="Xóa">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>
